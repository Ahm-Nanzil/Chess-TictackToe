<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.Dashboard">

    <Label layoutX="200" layoutY="30" styleClass="title-label" text="Game Dashboard" />

    <Label layoutX="180" layoutY="80" styleClass="welcome-label" text="Welcome to Game Central!" />

    <Label layoutX="120" layoutY="120" styleClass="instruction-label" text="Choose a Game to Play:" />

    <VBox layoutX="160" layoutY="150" spacing="20">
        <Button onMouseClicked="#chessLogin" prefHeight="47.0" prefWidth="171.0" styleClass="play-button" text="Play Chess" />
        <Button onMouseClicked="#tictactoeLogin" styleClass="play-button" text="Play Tic-Tac-Toe" />
    </VBox>

</AnchorPane>
